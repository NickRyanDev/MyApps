using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApplication2
{
    class Receitabrigadeiro
    {
        int leiteCondensado;
        int Achocolatado;
        int colherManteiga;

        public Receitabrigadeiro(int leiteCondensado, int Achocolatado, int colherManteiga)
        {
            this.leiteCondensado = leiteCondensado;
            this.Achocolatado = Achocolatado;
            this.colherManteiga = colherManteiga;
        }

        public void Ingredientes(int leiteCondensado, int Achocolatado, int colherManteiga)
        {
            Console.WriteLine(leiteCondensado + " Latas de Leite condensado " + Achocolatado + " colheres de achocolatado " + colherManteiga + " colheres de Manteiga.");
        }
        public void Preparo()
        {
            Console.WriteLine("Coloca tudo na panela e mexe ate desgrudar do fundo");
        }
    }
}



